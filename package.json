{
  "name": "MVC",
  "version": "0.0.0",
  "description": "MVC Boilerplate for Express 4 Applications",
  "main": "bin/start",
  "scripts": {
    "test": "gulp lint",
    "postinstall": "gulp build",
    "start": "node bin/start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexKvazos/MVC.git"
  },
  "keywords": [
    "MVC",
    "Express4",
    "Browserify",
    "Gulp"
  ],
  "author": "AlexKvazos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlexKvazos/MVC/issues"
  },
  "homepage": "https://github.com/AlexKvazos/MVC.git",
  "dependencies": {
    "babel-core": "^6.4.5",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-syntax-flow": "^6.3.13",
    "babel-plugin-transform-flow-strip-types": "^6.4.0",
    "babel-plugin-typecheck": "^3.6.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "dotenv": "^1.1.0",
    "express": "^4.12.3",
    "mysql": "^2.6.2",
    "raven": "^0.8.1",
    "requireindex": "^1.1.0",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.1",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^1.10.3",
    "exorcist": "^0.4.0",
    "less": "^2.5.3",
    "livereload": "^0.4.0",
    "nodemon": "^1.8.1",
    "uglify-js": "^2.6.1",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": ["es2015", "stage-0"],
    "plugins": [
      "typecheck",
      "syntax-flow",
      "transform-flow-strip-types",
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "quotes": [2, "single"],
      "strict": [2, "never"],
      "semi": [2, "always"],
      "no-multi-spaces": 0,
      "no-alert": 0,
      "key-spacing": 0,
      "curly": 0,
      "no-irregular-whitespace": 0,
      "no-console": 0,
      "no-octal-escape": 0,
      "no-unused-vars": [2, {"vars": "all", "args": "none"}],
      "new-cap": 0,
      "no-shadow": 0,
      "camelcase": 0,
      "max-len": [1, 80, 2]
    },
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  }
}
